<%- include('../../partials/usuario/head') %> 
  <title>Agenda Contabilidade</title>
  <link rel="stylesheet" type="text/css" href="/css/solicitaServico.css">
<%- include('../../partials/usuario/head2') %> 
<body>
  <%- include('../../partials/UserLog/nav') %> 
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h6 class="display-5 text-center">Solicite um Serviço !</h6>
            </div>
            <hr>
            <div class="card-body">
                <h4 class="display-6">Lista de Serviços Disponíveis</h4>
                <% if(Object.values(servicos).length===0){ %>
                    <div class="alert alert-secondary alert-dismissible fade show text-center mt-5" role="alert">
                        <h6 class="display-6">Não temos nenhum serviço disponível para sua categoria!</h6>
                        <a href="#">
                            <i class="bi bi-emoji-frown" style="font-size: 4rem; color: black;"></i>
                        </a>
                        <p>
                            <a href="/user/index">Clique aqui para voltar ao menu principal!</a> 
                        </p>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% }else { %>
                    <% servicos.forEach(servico => { %>
                        <div class="card-services mb-3 mt-3">
                            <div class="row g-0">
                              <div class="col-md-4">
                                <img src="https://cdn.pixabay.com/photo/2021/10/11/13/12/website-6700615_960_720.png" class="img-fluid rounded-start" alt="...">
                              </div>
                              <div class="col-md-8">
                                <div class="card-body-services">
                                  <br>
                                  <h3 class="card-title display-6 mr-5"><%=servico.nome%></h3>
                                  <br>
                                  <br>
                                  <br>
                                  <br>
                                  <div class="button-card-service">
                                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal<%=servico.id%>" data-bs-whatever="@fat">Solicitar</button>
                                  </div>
                                </div>
                              </div>
                            </div>
                        </div>
                        <!-- MODAL -->
                        <div class="modal fade" id="exampleModal<%=servico.id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Dados para solicitação</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                <form>
                                  <div class="mb-3">
                                    <label for="recipient-name" class="col-form-label">Destinatário:</label>
                                    <input type="text" class="form-control" id="recipient-name" value="Agenda Contabilidade" disabled>
                                  </div>
                                  <div class="mb-3">
                                    <label for="message-text" class="col-form-label">Descrição do Serviço:</label>
                                    <textarea class="form-control" id="message-text" placeholder="Defina dados específicos para a solicitação do serviço" required></textarea>
                                  </div>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Fechar</button>
                                  <button type="submit" class="btn btn-primary">Enviar Solicitação</button>
                                </div>
                            </form>
                            </div>
                          </div>
                        </div>
                    <% }); %> 
                <% } %>
            </div>
        </div>
    </div>
</body>
<%- include('../../partials/usuario/footer1') %> 
<script src="/js/historicoServico.js"></script>

